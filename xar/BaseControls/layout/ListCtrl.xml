						<textcolor>system.black</textcolor>
						<endellipsis>1</endellipsis>
					</attr>
				</obj>
				<obj id="btn" class="CoolJ.ImageButton">
					<attr>
						<left>0</left>
						<top>0</top>
						<width>0</width>
						<height>0</height>
						<visible>false</visible>
					</attr>
					<eventlist>
						<event name="OnClick" file="ListCtrl.xml.lua" func="Grid_OnClick" />
					</eventlist>
				</obj>
			</children>
			<eventlist>
				<event name="OnPosChange" file="ListCtrl.xml.lua" func="Grid_OnPosChange" />	
			</eventlist>
		</objtemplate>	
	</control>



