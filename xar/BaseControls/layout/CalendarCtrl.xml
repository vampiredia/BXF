														<left>father.width-30</left>
														<top>1</top>
														<width>28</width>
														<height>28</height>
														<NormalBkgID>texture.btn.calendar.next.page</NormalBkgID>
														<HoverBkgID>texture.btn.calendar.next.page.hover</HoverBkgID>
														<DownBkgID>texture.btn.calendar.next.page.down</DownBkgID>
														<DisableBkgID>texture.btn.calendar.next.page.disable</DisableBkgID>	
														<drawmode>1</drawmode>														
													</attr>
													<eventlist>
														<event name="OnClick" file="CalendarCtrl.xml.lua" func="BTN_OnClickNextPage" />
													</eventlist>
												</obj>
											</children>
										</obj>
										<obj id="layout.calendar.grid.week" class="LayoutObject">
