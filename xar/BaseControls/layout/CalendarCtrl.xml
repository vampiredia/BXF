												<height>30</height>
												<zorder>1000</zorder>
											</attr>
											<children>
												<obj id="texture.calendar.grid.title" class="ImageObject">
													<attr>
														<left>0</left>
														<top>0</top>
														<width>father.width</width>
														<height>father.height</height>
														<image>texture.calendar.title.bkg</image>
														<drawmode>1</drawmode>
