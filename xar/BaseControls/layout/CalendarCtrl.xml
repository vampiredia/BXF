													</eventlist>
												</obj>
												<obj id="text.calendar.grid.title" class="TextObject">
													<attr>
														<top>3</top>
														<width>father.width</width>
														<height>14</height>
														<valign>center</valign>
														<halign>center</halign>
													</attr>
												</obj>
												<obj id="btn.next.page.calendar" class="WHome.ImageButton">
