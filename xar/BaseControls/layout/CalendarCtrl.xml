														<left>2</left>
														<top>1</top>
														<width>28</width>
														<height>28</height>
														<NormalBkgID>texture.btn.calendar.pre.page</NormalBkgID>
														<HoverBkgID>texture.btn.calendar.pre.page</HoverBkgID>
														<DownBkgID>texture.btn.calendar.pre.page</DownBkgID>
														<DisableBkgID>texture.btn.calendar.pre.page</DisableBkgID>
														<drawmode>1</drawmode>
