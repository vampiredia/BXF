												<obj id="week.7" class="TextObject">
													<attr>
														<left>153</left>
														<top>2</top>
														<width>24</width>
														<height>24</height>
														<text>六</text>
														<halign>center</halign>
														<zorder>1000</zorder>
													</attr>
												</obj>
											</children>
										</obj>
										<obj id="layout.calendar.grid.day" class="LayoutObject">
											<attr>
												<left>0</left>
												<top>53</top>
												<width>father.width</width>
												<height>father.height-53</height>
												<zorder>100</zorder>
											</attr>
										</obj>
									</children>
								</obj>
							</children>
						</obj>
					</children>
				</obj>
			</children>
			<eventlist>
				<event name="OnInitControl" file="CalendarCtrl.xml.lua" func="OnInitControlCalendarCtrl" />
			</eventlist>
		</objtemplate>
	</control>
